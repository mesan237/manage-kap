{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",                  // applies to whole file :contentReference[oaicite:3]{index=3}
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true                      // lets ESLint run fixes (including Prettier) :contentReference[oaicite:4]{index=4}
  },
  "eslint.format.enable": true,
  "eslint.validate": [
    "javascript", "javascriptreact", "typescript", "typescriptreact"
  ],
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
